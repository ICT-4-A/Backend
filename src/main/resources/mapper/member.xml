<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--여기서 namespace는 @Mapper를 지정한 Interface인 즉 패키지포함해서 MemoDao를 작성해야 함--> 
<mapper namespace="kr.co.ictedu.movie.member.MemberDao">

	<insert id="insertMember" parameterType="mem">
		INSERT INTO member (member_num, email,PASSWORD,nickname,member_genre) 
		VALUES (member_seq.NEXTVAL, #{email},#{password},#{nickname},#{member_genre})
	</insert>

	<!-- 회원 정보 수정 -->
	<update id="updateMember" parameterType="mem">
	    UPDATE member
	    SET PASSWORD = #{password}, member_genre = #{member_genre}
	    WHERE member_num = #{member_num}
	</update>

</mapper> 








