<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--여기서 namespace는 @Mapper를 지정한 Interface인 즉 패키지포함해서 MemoDao를 작성해야 함--> 
<mapper namespace="kr.co.ictedu.movie.movie.MovieCommDao">
<insert id="addMcomment" parameterType="mcomm">
INSERT INTO movie_form_comm VALUES(movie_form_comm_seq.NEXTVAL, #{mnickname}, #{mcontent}, #{reip},sysdate,#{mcode})
</insert>

<select id="commentList" resultType="mcomm" parameterType="int">

SELECT num, mcontent, mregdate, mnickname,reip FROM movie_form_comm ORDER BY mregdate DESC
</select>
</mapper> 








